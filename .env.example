# API Configuration
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://helpdesk:helpdesk@localhost:5432/helpdesk

# JWT Secrets (use strong random strings in production)
JWT_ACCESS_SECRET=your-secret-key-min-16-chars-required
JWT_REFRESH_SECRET=your-refresh-secret-min-16-chars

# Token TTL
ACCESS_TOKEN_TTL_MIN=15
REFRESH_TOKEN_TTL_DAYS=7

# CORS
CORS_ORIGIN=http://localhost:3000

# S3 (Optional)
S3_BUCKET=
S3_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_SIGNED_URL_EXPIRES_SEC=900
MAX_UPLOAD_BYTES=10485760

# Redis (Optional)
REDIS_URL=redis://localhost:6379
SLA_CHECK_EVERY_SEC=60

# Email (Optional)
RESEND_API_KEY=
EMAIL_FROM=noreply@helpdesk.local

# Web
WEB_BASE_URL=http://localhost:3000
