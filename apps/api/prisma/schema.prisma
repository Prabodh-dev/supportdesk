generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  AGENT
  CUSTOMER
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_ON_CUSTOMER
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TicketCategory {
  GENERAL
  LOGIN
  PAYMENT
  BUG
  OTHER
}

enum MessageType {
  CUSTOMER_REPLY
  AGENT_REPLY
  INTERNAL_NOTE
  SYSTEM_EVENT
}

enum AttachmentStatus {
  PENDING
  UPLOADED
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  passwordHash String
  role         UserRole  @default(CUSTOMER)
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sessions         Session[]
  createdTickets   Ticket[]        @relation("TicketCreatedBy")
  assignedTickets  Ticket[]        @relation("TicketAssignedTo")
  teamMemberships  TeamMember[]
  messages         TicketMessage[]
  uploads          Attachment[]    @relation("AttachmentUploadedBy")
}

model Session {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  refreshTokenHash String   @unique
  expiresAt        DateTime
  revokedAt        DateTime?
  createdAt        DateTime @default(now())

  userAgent        String?
  ip               String?

  @@index([userId])
  @@index([expiresAt])
}

model Team {
  id        String      @id @default(cuid())
  name      String      @unique
  isActive  Boolean     @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  members   TeamMember[]
  tickets   Ticket[]
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  createdAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([userId])
}

model Ticket {
  id              String         @id @default(cuid())
  ticketNo        Int            @unique @default(autoincrement())

  title           String
  description     String
  category        TicketCategory @default(GENERAL)
  priority        TicketPriority @default(MEDIUM)
  status          TicketStatus   @default(OPEN)
  tags            String[]       @default([])

  createdById     String
  createdBy       User           @relation("TicketCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  assignedAgentId String?
  assignedAgent   User?          @relation("TicketAssignedTo", fields: [assignedAgentId], references: [id], onDelete: SetNull)

  teamId          String?
  team            Team?          @relation(fields: [teamId], references: [id], onDelete: SetNull)

  firstResponseAt DateTime?
  resolvedAt      DateTime?
  closedAt        DateTime?

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  messages        TicketMessage[]
  attachments     Attachment[]   @relation("AttachmentTicket")

  @@index([status])
  @@index([priority])
  @@index([category])
  @@index([createdById])
  @@index([assignedAgentId])
  @@index([teamId])
  @@index([createdAt])
}

model TicketMessage {
  id         String      @id @default(cuid())
  ticketId   String
  ticket     Ticket      @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  authorId   String
  author     User        @relation(fields: [authorId], references: [id], onDelete: Restrict)

  type       MessageType
  body       String
  isInternal Boolean     @default(false)

  createdAt  DateTime    @default(now())

  attachments Attachment[]

  @@index([ticketId])
  @@index([authorId])
  @@index([createdAt])
}

model Attachment {
  id           String           @id @default(cuid())
  key          String           @unique
  status       AttachmentStatus @default(PENDING)

  originalName String
  mimeType     String
  sizeBytes    Int

  uploadedById String
  uploadedBy   User             @relation("AttachmentUploadedBy", fields: [uploadedById], references: [id], onDelete: Restrict)

  ticketId     String?
  ticket       Ticket?          @relation("AttachmentTicket", fields: [ticketId], references: [id], onDelete: SetNull)

  messageId    String?
  message      TicketMessage?   @relation(fields: [messageId], references: [id], onDelete: SetNull)

  createdAt    DateTime         @default(now())

  @@index([ticketId])
  @@index([messageId])
  @@index([uploadedById])
  @@index([status])
}
